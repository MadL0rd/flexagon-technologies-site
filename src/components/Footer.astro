---
import logoUrl from '@assets/logo.svg?url';

interface ContactInfo {
  email: string;
  phone?: string;
  telegram: string;
}

const { contact }: { contact: ContactInfo } = Astro.props;
---
<footer>
  <div class="inner">
    <img src={logoUrl} alt="Логотип Flexagon" width="140" height="48" loading="lazy" />
    <p>© {new Date().getFullYear()} Flexagon Technologies. Все права защищены.</p>
    <p>
      <strong>Email:</strong> <a href={`mailto:${contact.email}`}>{contact.email}</a>
      &nbsp;·&nbsp;
      <strong>Telegram:</strong> <a href={contact.telegram} target="_blank" rel="noopener">{contact.telegram}</a>
    </p>
  </div>
</footer>
